Metadata
    title: "TCTT"
    description: "TCTT stands for Ta Components Tou Thoma."
    version: "0.0.1"
end

MongoDB maindb
    uri: "mongodb://localhost:27017"
    db: "tctt"
end

Sentry
    Frontend:
        dsn: "ds"
        environment: "production"
    Backend:
        dsn: "ds"
        environment: "production"
end

Sendgrid
    api_key: "test"
    from_email: "etsardou@gmail.com"
end

GoogleClientId
    client_id: "test"
end

Image logo_dark "https://<fig-1-image-url>"
Image logo_light "https://<fig-2-image-url>"

Color primary "#007bff"
Color secondary "#6c757d"
Color success "#28a745"
Color danger "#dc3545"
Color warning "#ffc107"
Color info "#17a2b8"
Color light "#f8f9fa"
Color dark "#343a40"
Color my_favorite "#7a01ff"

Logos
    dark: logo_dark
    light: logo_light
end

MainComponents
    breadcrumps: false
    navbar: true
    sidebar: true
    footer: true
    websocket: true
    login: true
    register: true
    invite: true
    reset_password: true
    broker: true
    localization: true
end

Attribute email_attr
    name: "email"
    type: "string"
    required: true
    unique: true
end

DataModel users_model
    description: "Users"
    timestamps: true
    allows_deletion: false
    fields:
        -   name: "password"
            type: "string"
            required: true
        -   name: "first_name"
            type: "string"
            required: true
        -   name: "last_name"
            type: "string"
            required: true
        -   name: "role"
            type: "string"
            required: true
        -   name: "is_deleted"
            type: "boolean"
            required: true
            default: "false"
    attributes:
        -   email_attr
end

DataModel projects
    description: "Projects"
    timestamps: true
    allows_deletion: false
    fields:
        -   name: "name"
            type: "string"
            required: true
            unique: true
        -   name: "description"
            type: "string"
            required: true
        -   name: "created_by"
            type: "string"
            required: true
            reference: users_model
        -   name: "updated_by"
            type: "string"
            required: true
            reference: users_model
        -   name: "is_deleted"
            type: "boolean"
            required: true
            default: "false"
end

Screen users_screen
    title: "System users"
    url: "/users"
    description: "A page where all the system users are shown"
end

Screen projects_screen
    title: "System projects"
    url: "/projects"
    description: "A page where all the system projects"
end 

ExternalUrl google "https://www.google.com"

MenuItem users_mi
    title: "Users"
    icon: "/icons/users.png"
    url: users_screen
end

MenuItem projects_mi
    title: "Projects"
    icon: "/icons/projects.png"
    url: projects_screen
end

MenuItem google_mi
    title: "Google"
    icon: "/icons/google.png"
    url: google
end

Menubar users_mi, projects_mi
Navbar users_mi, google_mi